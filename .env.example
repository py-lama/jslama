# Jslama Environment Variables


# LogLama configuration
# These settings control the LogLama integration
JSLAMA_LOG_LEVEL=INFO                # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
JSLAMA_LOG_DIR=./logs               # Directory to store log files
JSLAMA_DB_LOGGING=true              # Enable database logging for advanced querying
JSLAMA_DB_PATH=./logs/jslama.db    # Path to SQLite database for logs
JSLAMA_JSON_LOGS=false              # Use JSON format for logs (useful for log processors)

# LogLama advanced settings
LOGLAMA_STRUCTURED_LOGGING=false      # Use structured logging with structlog
LOGLAMA_MAX_LOG_SIZE=10485760         # Maximum log file size in bytes (10 MB)
LOGLAMA_BACKUP_COUNT=5                # Number of backup log files to keep
